{
  "manifest_version": 2,
  "name": "YouTube Speed",
  "description": "Scale play speed in YouTube.",
  "version": "1.0.0",

  "options_page":"options/options.html",

  "content_scripts": [
    {
      "js":         [ "content.js" ],
      "matches":    [ "<all_urls>" ],
  	  "all_frames": true,
  	  "run_at":     "document_end"
    }
  ],

  "permissions": [
    "storage"
  ],

  "web_accessible_resources": [
    "main.js",
    "style.css",
    "options/options.css",
    "options/options.js"
  ]
}
